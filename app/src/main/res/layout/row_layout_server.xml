<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_server"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_background"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="nama"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbarstatus"
            style="?android:attr/progressBarStyle"
            android:progress="@android:integer/config_shortAnimTime"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/layout_service_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txt_http"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="HTTP"
                android:textSize="9dp"
                android:textColor="@android:color/transparent"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp" />
            <TextView
                android:id="@+id/http_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="9dp"
                android:textColor="@android:color/transparent"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/http_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="9dp"
                android:textColor="@android:color/transparent"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_exception"
            android:textSize="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

